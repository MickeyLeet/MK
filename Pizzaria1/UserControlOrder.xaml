                    </Button>
                </ListViewItem>
                <ListViewItem Height="60" HorizontalAlignment="Left" Width="135">
                    <Button Name="Burger_Button" Click="Burger_Btn_Click" Height="60" Width="130" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Background="#FF2196F3">
                        <materialDesign:PackIcon Kind="Food" Width="35" Height="30" Foreground="White" VerticalAlignment="Center" Margin="5,5,15,5"/>
                        <TextBlock Text="Burgers" FontSize="17" VerticalAlignment="Center" Foreground="#FF7FFFA1" Margin="-17,5,8,5" />
