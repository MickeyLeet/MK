                        <StackPanel Orientation="Horizontal" Background="#FF2196F3">
                            <materialDesign:PackIcon Kind="Pizza" Width="30" Height="30" VerticalAlignment="Center" Foreground="White" Margin="5"/>
                            <TextBlock Text="Pizza" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-4,2,0,2" Foreground="#FF7FFFA1"/>
