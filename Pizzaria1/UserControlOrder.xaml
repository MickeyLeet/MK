                </ListViewItem>
                <ListViewItem Height="60" HorizontalAlignment="Left" Width="135">
                    <Button Name="Drinks_Button" Click="Drinks_Btn_Click" Height="60" Width="130" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Background="#FF2196F3">
                        <materialDesign:PackIcon Kind="FoodForkDrink" Width="30" Height="30" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text="Drinks" FontSize="17" VerticalAlignment="Center" Foreground="#FF7FFFA1" Margin="-5,5,0,2"/>
                    </StackPanel>
                    </Button>
                </ListViewItem>
                <ListViewItem Height="60" Width="135" HorizontalAlignment="Left">
                    <Button Name="Other_Button" Click="Other_Btn_Click" Height="60" Width="130" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Background="#FF2196F3">
                        <materialDesign:PackIcon Kind="FoodApple" Width="30" Height="30" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text="Other" FontSize="17" VerticalAlignment="Center" Foreground="#FF7FFFA1" Margin="-5,5,0,2"/>
